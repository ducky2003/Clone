@using Project.Models;
@using Project.Areas.Admin.Models
@model IList<Users>
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Người dùng</h2>
    </div>
    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="row">
                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">
                        <div class="card-body mt-4">
                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th class="col-1 text-center">#</th>
                                        <th class="col-2 text-center">Tên</th>
                                        <th class="col-3 text-center">Email</th>
                                        <th class="col-2 text-center">Số điện thoại</th>
                                        <th class="col-2 text-center">Địa chỉ</th>
                                        <th class="col-1 text-center">Hiện/Ẩn</th>
                                        <th class="col-2 text-center">Chức năng</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th class="text-center" scope="row">@item.UserID</th>
                                            <td class="text-center">
                                                <a href="#" class="text-primary text-center">@item.UserName</a>
                                            </td>
                                            <td class="text-center">
                                                <a href="#" class="text-primary text-center">@item.UserEmail</a>
                                            </td>
                                            <td class="text-center">
                                                <a href="#" class="text-primary text-center">@item.Sodienthoai</a>
                                            </td>
                                            <td class="text-center">
                                                <a href="#" class="text-primary text-center">@item.Diachi</a>
                                            </td>
                                            <td class="text-center">@item.isActive</td>
                                            <td class="text-center">
                                                <a href="/Admin/User/Edit/@item.UserID" class="btn btn-primary btn-sm"
                                                   title="Sửa nội dung">
                                                    <i class=" bi bi-pencil"></i>
                                                </a>
                                                <a href="/Admin/User/Delete/@item.UserID" class="btn btn-danger btn-sm"
                                                   title="Xóa">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>

                        </div>

                    </div>
                </div><!-- End Recent Sales -->
            </div>
        </div>
    </section>
</main>