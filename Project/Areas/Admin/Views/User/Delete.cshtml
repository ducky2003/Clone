@using Project.Areas.Admin.Models
@model Users
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xóa?</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <lable asp-for="UserID">TipID</lable>
            <input value="UserID" type="text" class=" form-control mb-3" asp-for="UserID" disabled>

        </div>
        <div class="form-group col-md-6">
            <lable asp-for="TipTitle">Tiptitle</lable>
            <input value="@Model.UserName" type="text" class=" form-control mb-3" asp-for="UserName" disabled>

        </div>
        <div class="form-group col-md-6">
            <lable asp-for="TipTitle">Tiptitle</lable>
            <input value="@Model.UserEmail" type="text" class=" form-control mb-3" asp-for="UserEmail" disabled>

        </div>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascrip:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill"></i> Xóa
        </button>
    </form>
</main>