@using Project.Models;
@using Project.Utilities;
@model IList<TravelTip>
<!-- Recent Post Start -->
<div class="mb-5 wow slideInUp" data-wow-delay="0.1s">
    <div class="section-title section-title-sm position-relative pb-3" style="margin-left: 60px">
        <h3 class="m-2">Recent Post</h3>
    </div>
    @foreach (var item in Model)
    {
        string url = Functions.TitleSlugGenerator("tip", item.TipTitle, item.TipID);
        <div class="d-flex rounded overflow-hidden mb-3">
            <img class="img-fluid" src="@item.Timg" style="width: 100px; height: 100px; object-fit: cover;" alt="">
            <a href="/@url" class="h5 fw-semi-bold d-flex align-items-center bg-light px-3 mb-0" style="width:230px">
                @item.TipTitle
            </a>
        </div>
    }

</div>
<!-- Recent Post End -->