@model IList<Pack>;

<!-- Package Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Gói du lịch</h6>
            <h1 class="mb-5">Các gói du lịch hấp dẫn</h1>
        </div>
        <div class="row g-4 justify-content-center">                        
            @foreach(var item in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="package-item">
                        <div class="overflow-hidden">
                            <img class="img-fluid" src="@item.PackImg" alt="" style="width:408px;height:272px">
                        </div>
                        <div class="d-flex border-bottom">
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-map-marker-alt text-primary me-2"></i>@item.PlaceName</small>
                            <small class="flex-fill text-center border-end py-2"><i class="fa fa-calendar-alt text-primary me-2"></i>@item.PackDate</small>
                            <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i>@item.PackCount Người</small>
                        </div>
                        <div class="text-center p-4">
                            <h3 class="mb-0">@item.PackPrice VND</h3>
                            <div class="mb-3">
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                                <small class="fa fa-star text-primary"></small>
                            </div>
                            <p>@item.PackContent</p>
                            <div class="d-flex justify-content-center mb-2">
                                <a href="#" class="btn btn-sm btn-primary px-3 border-end" style="border-radius: 30px 0 0 30px;">Xem Thêm</a>
                                <a href="#" class="btn btn-sm btn-primary px-3" style="border-radius: 0 30px 30px 0;">Đặt trước</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
    </div>
</div>
<!-- Package End -->